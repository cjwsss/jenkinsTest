pipeline {
    agent any

    parameters {
      string name: 'myName', trim: true
    }

    stages {
        stage('Hello') {
            steps {
                script {
                    sh script: '''
                     #!/bin/bash
                     if [[ true ]];
                     then
                     echo ${params.myName} success!!!
                     fi
                     '''
                }
            }
        }
    }
}
